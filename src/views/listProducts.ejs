        <!-- Tarjeta de producto --> 
        <div class="result container-fluid row">
                
            <% products.forEach (item => { %>
            <div class=" col-xs-12 col-sm-6 col-md-4 col-lg-3 grid <%= item.category %> <%= item.brand %> <%= item.discount%>" > 
                
                <section class='article-style-celulares article01 cards' data-category="<%= item.brand + '-' + item.category%>" data-price="<%=item.price_product%>" data-discount="<%=item.discount%>">
                    <div class="brand-product" style="display: none;">
                        <h5 id="item-brand"><%= item.brand %></h5>
                    </div>
                    <div class="section-product" style="display: none;">
                        <h5 id="item-section"><%= item.section %></h5>
                    </div>
                    <% if (item.discount != 0) { %>
                        <div class="imgOferta"><img src="images/oferta/oferta1.png" alt="oferta"></div>
                        <% } %>
                    
                    <div class="imgProduct">
                        <img onclick="location.href='product/productDetail/<%= item.id%>'" 
                        src="images/products/<%= item.image_product %>">
                        
                    </div>
                    
                    
                    <article class="descriptionProduct listProduct">
                        <div class="title-product">
                            <h5 id="item-name"><%= item.name %></h5>
                        </div>
                        <div class="price-product">
                            <h5>$ <%= (((100 - item.discount)/100)*item.price_product).toFixed(2) %></h5>
                        </div> 
                        <!-- <% if (item.discount != 0) { %>
                            <div class="discount-listaProducto">
                                <h6 class="precio-tachado">$ <%= item.price_product %></h6>
                                <h6><%= item.discount %> % OFF</h6>
                            </div>
                        <% } %> -->
                        <div class="brand-product" style="display: none;">
                            <h5 id="item-brand"><%= item.brand %></h5>
                        </div>
                        <div class="section-product" style="display: none;">
                            <h5 id="item-section"><%= item.section %></h5>
                        </div>
                        
